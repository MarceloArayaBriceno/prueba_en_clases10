@page
@model Web.Pages.Peliculas.GenerosModel
@{
    ViewData["Title"] = "Géneros de Películas";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0">Géneros de Películas</h1>
                <a class="btn btn-secondary" asp-page="/Peliculas/Index">
                    <i class="fas fa-arrow-left"></i> Volver a Películas
                </a>
            </div>

            @if (Model.Generos != null && Model.Generos.Any())
            {
                
                <div class="row mb-4">
                    <div class="col-md-6 col-lg-4 mx-auto">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <div class="mb-3">
                                    <i class="fas fa-tags fa-3x"></i>
                                </div>
                                <h2 class="mb-0">@Model.Generos.Count()</h2>
                                <p class="mb-0">Géneros Totales</p>
                            </div>
                        </div>
                    </div>
                </div>

               
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Lista de Géneros</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var genero in Model.Generos)
                                    {
                                        <div class="col-md-3 col-sm-4 col-6 mb-2">
                                            <span class="badge bg-light text-dark p-2 w-100">
                                                @genero.Nombre
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h4>No hay géneros disponibles</h4>
                    <p>Actualmente no hay géneros registrados en el sistema.</p>
                </div>
            }
        </div>
    </div>
</div>

