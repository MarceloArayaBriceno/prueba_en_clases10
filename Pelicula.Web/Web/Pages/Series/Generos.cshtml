@page
@model Web.Pages.Series.GenerosModel
@{
	ViewData["Title"] = "Géneros de Series";
}

<div class="container-fluid px-4 mt-4">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="h2 mb-0">Géneros de Series</h1>
		<a class="btn btn-secondary" asp-page="/Series/Index">
			<i class="fas fa-arrow-left">Volver a Series</i>
		</a>
	</div>

	@if (Model.Generos != null && Model.Generos.Any())
	{
		<div class="row mb-4">
			<div class="col-md-6 col-lg-4 mx-auto">
				<div class="card bg-primary text-white text-center">
					<div class="card-body">
						<i class="fas fa-tags fa-3x mb-3"></i>
						<h2>@Model.Generos.Count()</h2>
						<p>Géneros Totales</p>
					</div>
				</div>
			</div>
		</div>

		<div class="row">
			@foreach (var genero in Model.Generos)
			{
				<div class="col-md-3 colcol-sm-4 col-6 mb-2">
					<span class="badge bg-light text-dark p-2 w-100">
						@genero.Nombre
					</span>
				</div>
			}
		</div>
	}
	else
	{
		<div class="alert alert-info text-center">
			<i class="fas fa-info-circle fa-2x mb-3"></i>
			<h4>No hay géneros disponibles</h4>
			<p>Actualmente no hay géneros registrados en el sistema.</p>
		</div>
	}
</div>
