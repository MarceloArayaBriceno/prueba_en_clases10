{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ApiEndPointsPelicula": {
        "UrlBase": "https://localhost:7053/api/pelicula/",
        "Metodos": [
            {
                "Nombre": "ObtenerDetallePelicula",
                "Valor": "detalle/{0}"
            },
            {
                "Nombre": "ObtenerPelicula",
                "Valor": "{0}"
            },
            {
                "Nombre": "ObtenerGeneros",
                "Valor": "generos"
            }
        ]
    },
    "ApiEndPointsSerie": {
        "UrlBase": "https://localhost:7053/api/serie/",
        "Metodos": [
            {
                "Nombre": "ObtenerDetalleSerie",
                "Valor": "detalle/{0}"
            },
            {
                "Nombre": "ObtenerSerie",
                "Valor": "{0}"
            },
            {
                "Nombre": "ObtenerGeneros",
                "Valor": "generos"
            }
        ]
    },

    "ApiEndPointsVisualizacion": {
        "UrlBase": "https://localhost:7053/api",
      "Metodos": [
        {
          "Nombre": "InsertarVisualizacion",
          "Valor": "Visualizaciones"
        },
        {
          "Nombre": "ObtenerVisualizacionesPorUsuario",
          "Valor": "Visualizaciones/{0}"
        },
        {
          "Nombre": "EliminarVisualizacion",
          "Valor": "Visualizaciones/{0}"
        }
      ]
    },

    "ApiEndPointsFavoritos": {
        "UrlBase": "https://localhost:7053/api/favorito",
        "Metodos": [
            {
                "Nombre": "ObtenerFavoritosPorUsuario",
                "Valor": "usuario/{0}"
            },
            {
                "Nombre": "EliminarFavorito",
                "Valor": "{0}"
            }
        ]
    }

}

